<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XamarinSpectrum.HomePage" NavigationPage.HasBackButton="False" Title="Home Page">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToolbarItem_Clicked" Text="Log Out"/>
    </ContentPage.ToolbarItems>
        <StackLayout>
            <Label Text="Get Employees List By Clicking the Button Below" Padding="30" TextColor="White"/>
            <Button Text="Get Employee List" BackgroundColor="#2196F3" Clicked="Button_Clicked" Margin="30"/>
            <Label x:Name="SelectedEmployeeText" FontAttributes="Bold" Padding="30" HorizontalOptions="StartAndExpand" FontSize="Large" TextColor="White"/>
        </StackLayout>
</ContentPage>
